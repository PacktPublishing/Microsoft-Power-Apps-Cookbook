{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/column-formatting.schema.json",
  "elmType": "div",
  "children": [
    {
      "elmType": "button",
      "customRowAction": {
        "action": "defaultClick"
      },
      "attributes": {
        "class": "ms-fontColor-themePrimary ms-fontColor-themeDark--hover"
      },
      "style": {
        "border": "0px solid",
        "padding": "3px 5px 3px 6.5px",
        "margin": "2px",
        "width": "33px",
        "background-color": "transparent",
        "cursor": "pointer",
        "display": "inherit"
      },
      "children": [
        {
          "elmType": "span",
          "attributes": {
            "iconName": "View",
            "class": "ms-font-l"
          }
        }
      ]
    },
    {
      "elmType": "button",
      "customRowAction": {
        "action": "editProps"
      },
      "attributes": {
        "class": "ms-fontColor-themePrimary ms-fontColor-themeDark--hover",
        "title": "Editar propiedades"
      },
      "style": {
        "border": "0px solid",
        "padding": "3px 5px 3px 6.5px",
        "margin": "2px",
        "width": "33px",
        "background-color": "transparent",
        "cursor": "pointer",
        "display": "inherit"
      },
      "children": [
        {
          "elmType": "span",
          "attributes": {
            "iconName": "Edit",
            "class": "ms-font-l"
          }
        }
      ]
    },
    {
      "elmType": "button",
      "customRowAction": {
        "action": "delete"
      },
      "attributes": {
        "class": "ms-fontColor-themePrimary ms-fontColor-themeDark--hover"
      },
      "style": {
        "border": "0px solid",
        "padding": "3px 5px 3px 6.5px",
        "margin": "2px",
        "background-color": "transparent",
        "width": "33px",
        "cursor": "pointer",
        "display": "inherit"
      },
      "children": [
        {
          "elmType": "span",
          "attributes": {
            "iconName": "Delete",
            "class": "ms-font-l"
          }
        }
      ]
    }
  ]
}
